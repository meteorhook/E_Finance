<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/desire_gradient_bg">
        <ImageView
            android:id="@+id/desire_bg_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/heart_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desiretitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心愿标题"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/desire_bg_logo"
            app:layout_constraintStart_toStartOf="@id/desire_bg_logo"
            app:layout_constraintTop_toBottomOf="@id/desire_bg_logo" />

        <TextView
            android:id="@+id/desirenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/heart_bg"
            android:gravity="center"
            android:text="0000"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/desire_bg_logo"
            app:layout_constraintStart_toStartOf="@id/desire_bg_logo"
            app:layout_constraintTop_toBottomOf="@id/desiretitle" />

        <TextView
            android:id="@+id/desirecomplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/desire_complete_selector"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="实\t\t现"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/desire_bg_logo"
            app:layout_constraintStart_toStartOf="@id/desire_bg_logo"
            app:layout_constraintTop_toBottomOf="@id/desirenum" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>