<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_radius_btn"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择预算周期"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_marginLeft="15dp"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/month"
        app:layout_constraintStart_toStartOf="@+id/month"
        app:layout_constraintTop_toTopOf="@+id/month" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/month"
        android:paddingLeft="30dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="每月"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/monthcheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/check_logo"
        app:layout_constraintTop_toTopOf="@id/month"
        app:layout_constraintBottom_toBottomOf="@id/month"
        app:layout_constraintEnd_toEndOf="@id/month"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BFE8E8E8"
        app:layout_constraintBottom_toBottomOf="@id/month" />
    <View
        android:layout_marginLeft="15dp"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/day"
        app:layout_constraintStart_toStartOf="@+id/day"
        app:layout_constraintTop_toTopOf="@+id/day" />

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingVertical="10dp"
        android:text="每日"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/daycheck"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/check_logo"
        app:layout_constraintTop_toTopOf="@id/day"
        app:layout_constraintBottom_toBottomOf="@id/day"
        app:layout_constraintEnd_toEndOf="@id/day"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BFE8E8E8"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>