<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:id="@+id/ItemColor"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/radius_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ItemLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/daily"
        app:layout_constraintEnd_toEndOf="@+id/ItemColor"
        app:layout_constraintBottom_toBottomOf="@+id/ItemColor"
        app:layout_constraintStart_toStartOf="@+id/ItemColor"
        app:layout_constraintTop_toTopOf="@+id/ItemColor" />

    <TextView
        android:id="@+id/Project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="收支项目"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ItemColor"
        app:layout_constraintTop_toTopOf="@+id/ItemColor" />

    <TextView
        android:id="@+id/proportion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百分比"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Project"
        app:layout_constraintStart_toEndOf="@+id/Project"
        app:layout_constraintTop_toTopOf="@+id/Project" />

    <TextView
        android:id="@+id/frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="000000"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/frequency"
        app:layout_constraintStart_toStartOf="@+id/Project"
        app:layout_constraintTop_toBottomOf="@+id/Project"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>