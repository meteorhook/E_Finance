<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/grey"
    tools:context=".Billsearch">

    <View
        android:id="@+id/topbg"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/billledger" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bg"
        app:layout_constraintEnd_toStartOf="@+id/cancelSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="输入分类/金额/备注试试~" />

    <TextView
        android:id="@+id/cancelSearch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:text="取消"
        android:textColor="@color/btn_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search" />

    <TextView
        android:id="@+id/billledger"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:gravity="center"
        android:paddingEnd="25dp"
        android:text="当前账本名称"
        android:maxLines="1"
        android:maxEms="8"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <ImageView
        android:id="@+id/ledgerdown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/billledger"
        app:layout_constraintEnd_toEndOf="@+id/billledger"
        app:layout_constraintTop_toTopOf="@+id/billledger" />

    <TextView
        android:id="@+id/billdate"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:gravity="center"
        android:paddingEnd="25dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:text="不限时间"
        app:layout_constraintBottom_toBottomOf="@+id/ledgerdown"
        app:layout_constraintStart_toEndOf="@+id/ledgerdown"
        app:layout_constraintTop_toTopOf="@+id/ledgerdown" />

    <ImageView
        android:id="@+id/datedown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/billdate"
        app:layout_constraintEnd_toEndOf="@+id/billdate"
        app:layout_constraintTop_toTopOf="@+id/billdate" />

    <ImageView
        android:id="@+id/notfind"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/billnotfind"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billdate"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/notfindtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有找到xx相关结果呢~"
        app:layout_constraintEnd_toEndOf="@+id/notfind"
        app:layout_constraintStart_toStartOf="@+id/notfind"
        app:layout_constraintTop_toBottomOf="@+id/notfind" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billdate" />

    <View
        android:alpha="0.75"
        android:id="@+id/mask_layer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B3B3B3"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billledger" />

    <ImageView
        android:id="@+id/pgbar"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pgbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>