<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut android:shortcutId="addBill"
        android:shortcutShortLabel="@string/shortcut_addbill_s"
        android:shortcutLongLabel="@string/shortcut_addbill"
        android:enabled="true"
        android:icon="@drawable/money">
        <intent android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.e_finance"
            android:targetClass="com.example.e_finance.Bill_Add"/>
        <category android:name="android.shortcut.conversation"/>
    </shortcut>
    <shortcut android:shortcutId="billSearch"
        android:shortcutShortLabel="@string/shortcut_searchbill_s"
        android:shortcutLongLabel="@string/shortcut_searchbill"
        android:enabled="true"
        android:icon="@drawable/search">
        <intent android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.e_finance"
            android:targetClass="com.example.e_finance.Billsearch"/>
        <category android:name="android.shortcut.conversation"/>
    </shortcut>
    <shortcut android:shortcutId="statisticsBill"
        android:shortcutShortLabel="@string/shortcut_statisticsbill_s"
        android:shortcutLongLabel="@string/shortcut_statisticsbill"
        android:enabled="true"
        android:icon="@drawable/ledger_edits">
        <intent android:action="android.intent.action.VIEW"
            android:targetPackage="com.example.e_finance.ui.statistics"
            android:targetClass="com.example.e_finance.ui.statistics.StatisticsFragment"/>
        <category android:name="android.shortcut.conversation"/>
    </shortcut>

</shortcuts>