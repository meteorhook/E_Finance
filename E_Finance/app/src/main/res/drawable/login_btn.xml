<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#E66E4E" />
            //边框圆角
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
<!--        背景颜色处理-->
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="-2px"
        android:top="1px">
        <shape>
            //背景圆角
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="5px"
                android:color="#FFFFFFFF"/>
        </shape>
    </item>
</layer-list>