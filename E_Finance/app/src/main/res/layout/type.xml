<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ItemColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ItemLogo"
        app:layout_constraintBottom_toBottomOf="@+id/ItemColor"
        app:layout_constraintEnd_toEndOf="@+id/ItemColor"
        app:layout_constraintStart_toStartOf="@+id/ItemColor"
        app:layout_constraintTop_toTopOf="@+id/ItemColor"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/daily"/>

    <TextView
        android:id="@+id/typename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:text="分类名称"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ItemColor"
        app:layout_constraintStart_toStartOf="@+id/ItemColor"
        app:layout_constraintTop_toBottomOf="@+id/ItemColor" />

</androidx.constraintlayout.widget.ConstraintLayout>