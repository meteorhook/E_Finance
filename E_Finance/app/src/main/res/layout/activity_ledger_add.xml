<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/grey"
    tools:context=".ledgerAdd">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="选择记账场景"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="选择您的记账场景，为您匹配合适的记账分类"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dailyledger"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/dailyledger"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/daily_ledger_bg"
        app:layout_constraintEnd_toStartOf="@+id/marriageledger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/marriageledger" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="日常"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/dailyledger"
        app:layout_constraintStart_toStartOf="@+id/dailyledger"
        app:layout_constraintTop_toBottomOf="@+id/dailyledger" />

    <ImageView
        android:id="@+id/marriageledger"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/marriage_ledger_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="结婚"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/marriageledger"
        app:layout_constraintStart_toStartOf="@+id/marriageledger"
        app:layout_constraintTop_toBottomOf="@+id/marriageledger" />

    <ImageView
        android:id="@+id/babyledger"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/baby_ledger_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marriageledger"
        app:layout_constraintTop_toTopOf="@+id/marriageledger" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="宝宝"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/babyledger"
        app:layout_constraintStart_toStartOf="@+id/babyledger"
        app:layout_constraintTop_toBottomOf="@+id/babyledger" />

    <TextView
        android:id="@+id/customledger"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_ledger_bg"
        app:layout_constraintEnd_toEndOf="@+id/dailyledger"
        app:layout_constraintStart_toStartOf="@+id/dailyledger"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ledger_add"
        app:layout_constraintBottom_toBottomOf="@+id/customledger"
        app:layout_constraintEnd_toEndOf="@+id/customledger"
        app:layout_constraintStart_toStartOf="@+id/customledger"
        app:layout_constraintTop_toTopOf="@+id/customledger" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="自定义"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/customledger"
        app:layout_constraintStart_toStartOf="@+id/customledger"
        app:layout_constraintTop_toBottomOf="@+id/customledger" />
    <ImageView
        android:id="@+id/pgbar"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pgbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>