<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ItemColor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/radius_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ItemLogo"
        app:layout_constraintBottom_toBottomOf="@+id/ItemColor"
        app:layout_constraintEnd_toEndOf="@+id/ItemColor"
        app:layout_constraintStart_toStartOf="@+id/ItemColor"
        app:layout_constraintTop_toTopOf="@+id/ItemColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/daily"/>
</androidx.constraintlayout.widget.ConstraintLayout>